          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
