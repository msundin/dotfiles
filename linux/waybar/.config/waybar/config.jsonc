  "custom/weather": {
    "exec": "bash -lc 'lat=57.7089; lon=11.9746; ua=\"WaybarWeather/1.0 (mattias@example.com)\"; url=\"https://api.met.no/weatherapi/locationforecast/2.0/compact?lat=${lat}&lon=${lon}\"; base=\"/tmp/waybar_weather_${lat}_${lon}\"; hdr=\"$base.hdr\"; jsonf=\"$base.json\"; # conditional fetch\ncond=(); if [[ -f \"$hdr\" ]]; then etag=$(grep -i \"^etag:\" \"$hdr\" | cut -d\" \" -f2- | tr -d \"\\r\"); lm=$(grep -i \"^last-modified:\" \"$hdr\" | cut -d\" \" -f2- | tr -d \"\\r\"); [[ -n \"$etag\" ]] && cond+=( -H \"If-None-Match: $etag\" ); [[ -n \"$lm\" ]] && cond+=( -H \"If-Modified-Since: $lm\" ); fi; code=$(curl -sS -4 --connect-timeout 6 --max-time 12 -H \"User-Agent: $ua\" \"${cond[@]}\" -D \"$hdr.new\" -o \"$jsonf.new\" -w \"%{http_code}\" \"$url\" || echo FAIL); if [[ \"$code\" == \"200\" ]]; then mv -f \"$hdr.new\" \"$hdr\"; mv -f \"$jsonf.new\" \"$jsonf\"; elif [[ \"$code\" == \"304\" && -f \"$jsonf\" ]]; then rm -f \"$hdr.new\" \"$jsonf.new\"; elif [[ -f \"$jsonf\" ]]; then rm -f \"$hdr.new\" \"$jsonf.new\"; else echo \"üåê Offline\"; exit 0; fi; # parse\nsym=$(jq -r \".properties.timeseries[0].data.next_1_hours.summary.symbol_code // \\\"\\\"\" < \"$jsonf\"); t=$(jq -r \".properties.timeseries[0].data.instant.details.air_temperature\" < \"$jsonf\"); hum=$(jq -r \".properties.timeseries[0].data.instant.details.relative_humidity\" < \"$jsonf\"); wind=$(jq -r \".properties.timeseries[0].data.instant.details.wind_speed\" < \"$jsonf\"); deg=$(jq -r \".properties.timeseries[0].data.instant.details.wind_from_direction\" < \"$jsonf\"); precip=$(jq -r \".properties.timeseries[0].data.next_1_hours.details.precipitation_amount // 0\" < \"$jsonf\"); pop=$(jq -r \".properties.timeseries[0].data.next_1_hours.details.probability_of_precipitation // 0\" < \"$jsonf\"); # wind letters\nd=${deg%.*}; (( d<0 )) && d=$((d+360)); if (( d<23 || d>=338 )); then dir=N; elif (( d<68 )); then dir=NE; elif (( d<113 )); then dir=E; elif (( d<158 )); then dir=SE; elif (( d<203 )); then dir=S; elif (( d<248 )); then dir=SW; elif (( d<293 )); then dir=W; else dir=NW; fi; # icons with yellow sun\ncase \"$sym\" in clearsky_day) icon=\"<span foreground=\\\"gold\\\">‚òÄ</span>\";; clearsky_night) icon=\"‚òæ\";; fair*|partlycloudy*) icon=\"<span foreground=\\\"gold\\\">‚òÄ</span>‚òÅ\";; lightrainshowers_day|rainshowers_day|heavyrainshowers_day) icon=\"<span foreground=\\\"gold\\\">‚òÄ</span>‚õÜ\";; lightrainshowers_night|rainshowers_night|heavyrainshowers_night) icon=\"‚òæ‚õÜ\";; *thunder*day) icon=\"<span foreground=\\\"gold\\\">‚òÄ</span>‚õà\";; *thunder*) icon=\"‚õà\";; *showers*) icon=\"‚õÜ\";; cloudy*) icon=\"‚òÅ\";; rain|lightrain|heavyrain) icon=\"‚õÜ\";; *snow*) icon=\"‚ùÑ\";; fog*) icon=\"üå´\";; *) icon=\"‚ùî\";; esac; # raise all symbols a bit (Pango units: 1024 per pt)\nicon=\"<span rise=\\\"1500\\\">$icon</span>\"; # formatter\nfmt(){ n=\"$1\"; if [[ \"$n\" == *.* ]]; then frac=\"${n#*.}\"; if [[ \"$frac\" == 0 || \"$frac\" == 00* ]]; then printf \"%d\" \"${n%.*}\"; else printf \"%.1f\" \"$n\"; fi; else printf \"%d\" \"$n\"; fi; }; printf \"%s +%s¬∞C %s %sm/s %s%% <span size=\\\"x-small\\\" rise=\\\"2000\\\">üíßÔ∏é</span>%smm %s%%\\n\" \"$icon\" \"$(fmt \"$t\")\" \"$dir\" \"$(fmt \"$wind\")\" \"$(fmt \"$hum\")\" \"$(fmt \"$precip\")\" \"$pop\"'",
    "interval": 603,
    "format": "{}",
    "tooltip": true,
    "markup": "pango"
  },
