{
  "layer": "top",
  "position": "top",
  "height": 30,
  "spacing": 1,
  "margin": 0,
  // "modules-left": ["sway/workspaces", "sway/mode", "custom/weather", "custom/quote"],
  "modules-left": [
    "sway/workspaces",
    "battery"
  ],
  "modules-center": [
    "sway/mode",
    "custom/weather"
    // "sway/window"
    // "custom/uptime",
    // "custom/updates"
  ], //battery   //disk     // uptime      //updates        // systray
  // "modules-right": [
  //   "clock",
  //   "pulseaudio",
  //   "backlight",
  //   "network",
  //   "cpu",
  //   "memory",
  //   "temperature",
  //   "battery",
